@model Pocketses.Web.Models.Campaigns.CampaignsViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="p-4 text-gray-600">

    <h1 class="page-title">
        Campaigns
    </h1>

    <div class="flex flex-col content-center shadow-md sm:rounded-lg">
        <form asp-controllers="Campaigns" asp-action="Index" method="get">
            <div class="pb-4 bg-white dark:bg-gray-900">
                <div class="relative mt-1">
                    <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                        <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></svg>
                    </div>
                    <input type="search" asp-for="SearchString" class="p-2 pl-10 w-80 text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="campaign..." />
                </div>
            </div>
        </form>
        <table class="text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark\:text-gray-400">
                <tr>
                    <th scope="col" class="py-3 px-6">Id</th>
                    <th scope="col" class="py-3 px-6">Name</th>
                    <th scope="col" class="py-3 px-6">
                        <a asp-action="Create" class="btn btn-blue">
                            <i class="fa-solid fa-plus"></i>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Campaigns)
                {
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                        <td class="py-4 px-6">
                            @Html.DisplayFor(model => item.Id)
                        </td>
                        <td class="py-4 px-6">
                            @Html.DisplayFor(model=>item.Name)
                        </td>
                        <td class="py-4 px-6 space-x-4">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-blue">
                                Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-blue">
                                Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-red">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://kit.fontawesome.com/eac4e9df66.js" crossorigin="anonymous"></script>