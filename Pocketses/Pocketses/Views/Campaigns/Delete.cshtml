@model Pocketses.Web.Models.Campaigns.Campaign

@{
    ViewData["Title"] = "Delete";
}

<div class="p-4 text-gray-600">

    <h1 class="page-title">
        Delete
    </h1>


    <h3 class="text-xl text-red-700 pb-4">
        Are you sure you want to delete this campaign?
    </h3>

    <div class="shadow sm:rounded-lg p-4 mb-4">

        <h4 class="text-l font-bold pb-2">
            Campaign
        </h4>

        <div class="bg-white shadow sm:rounded-lg p-4 mb-4">
            <dl>
                <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">
                        @Html.DisplayNameFor(model=>model.Name)
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                        @Html.DisplayFor(model=>model.Name)
                    </dd>
                </div>
            </dl>
        </div>
        <form asp-action="Delete">

            <input type="hidden" asp-for="Id" />

            <input type="submit" value="Delete" class="btn btn-red my-4" />

        </form>
    </div>

    <a asp-action="Index" class="btn btn-blue">
        Back to List
